@page "{searchString?}"
@model ScriptureJournal.Pages.Scriptures.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Entries</h1>

<div class="redirect">
    <p>
        <a asp-page="Create">Create New</a>
    </p>
</div>


<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search Notes:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a style="color: black;" asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>

<div class="table-responsive container-fluid">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr class="d-flex">
                <th class="col-2">
                    @Html.DisplayNameFor(model => model.Scripture[0].Title)
                </th>
                <th class="col-2">
                    <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                        @Html.DisplayNameFor(model => model.Scripture[0].DateAdded)
                    </a>
                </th>
                <th  class="col-1">
                    <a asp-page="./Index" asp-route-sortOrder="@Model.BookSort">
                        @Html.DisplayNameFor(model => model.Scripture[0].Book)
                    </a>
                </th>
                <th class="col-1">
                    @Html.DisplayNameFor(model => model.Scripture[0].Chapter)
                </th>
                <th  class="col-1">
                    @Html.DisplayNameFor(model => model.Scripture[0].Verse)
                </th>
                <th  class="col-5">
                    @Html.DisplayNameFor(model => model.Scripture[0].Notes)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Scripture)
            {
                <tr class="d-flex">
                    <td class="col-2">
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td class="col-2">
                        @Html.DisplayFor(modelItem => item.DateAdded)
                    </td>
                    <td class="col-1">
                        @Html.DisplayFor(modelItem => item.Book)
                    </td>
                    <td class="col-1">
                        @Html.DisplayFor(modelItem => item.Chapter)
                    </td>
                    <td class="col-1">
                        @Html.DisplayFor(modelItem => item.Verse)
                    </td>
                    <td class="col-3">
                        @Html.DisplayFor(modelItem => item.Notes) <br />
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


