@page "{id:int?}"
@model ScriptureJournal.Pages.Scriptures.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Scripture</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Scripture.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Scripture.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Scripture.DateAdded)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Scripture.DateAdded)
        </dd>
        <dt></dt>
        <dt class="col-sm-2">
            Scripture Reference
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Scripture.Book) @Html.DisplayFor(model => model.Scripture.Chapter) : @Html.DisplayFor(model => model.Scripture.Verse)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Scripture.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Scripture.Notes)
        </dd>
    </dl>
</div>
<div class="redirect">
    <a asp-page="./Edit" asp-route-id="@Model.Scripture.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
